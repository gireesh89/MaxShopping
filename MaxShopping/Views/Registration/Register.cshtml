@model ShoppingSite.Models.Register
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page page-register">
    <div class="page page-title">
        <h2>Register to Smart Bazzar</h2>
    </div>
</div>
<script src="~/js/Login.js"></script>
<div class="row">
    <div class="col-lg-12">
        <div class="panel-primary" align="center">
            <div class="panel-body">
                <div role="form" class="form-horizontal" style="margin-left:10%">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group input-group">
                            @Html.Label("My Name Is :")
                            @Html.TextBoxFor(model => model.name, new { @class = "form-control form-control-clearall", @required = "Required" })
                        </div>
                        <div class="form-group input-group">
                            @Html.Label("My e-mail Address is :")
                            @Html.TextBoxFor(model => model.emailAddress, new { @id = "txtEmail", @class = "form-control form-control-clearall", @required = "Required" })
                        </div>
                        <div class="form-group input-group">
                            @Html.Label("Type it again")
                            @Html.TextBox("txtEmailAdd", "", new { @id = "txtEmailOm", @onblur = "return CheckEmail(this);", @class = "form-control form-control-clearall", @required = "Required" })
                        </div>
                        <div class="form-group input-group">
                            @Html.Label("My Mobile No is :")
                            @Html.TextBoxFor(model => model.mobileno, "", new { @id="txtMobno",@class="form-control form-control-clearall",@required="optional"})
                        </div> 
                        <div class="form-group">
                            @Html.Label("Protect Your Information with Password", new { @class = "form-control-clearall", style = "color:#cc0000" })
                        </div>
                        <div class="form-group">
                            @Html.Label("This will be your only SmartBazar com Password", new { @class="form-control-clearall",style="color:#cc0000" })
                        </div>
                        <div class="form-group input-group">
                            @Html.Label("My Password is :")
                            @Html.TextBoxFor(model => model.password, "", new { @id="txtPassword",@class="form-control form-control-clearall",@required="required"})
                        </div>
                        <div class="form-group input-group">
                            @Html.Label("ReType Password :")
                            @Html.Password("txtRePassword", "", new {@onkeyup="return CheckPassword(this);", @id="txtrePassword",@class="form-control form-control-clearall",@required="required"})
                        </div> 
                        <div class="form-group input-group">
                            <input type="submit" value="Create Account" class="btn btn-success" />
                        </div> 
                    }
                </div>
            </div>
        </div>
    </div>

</div>