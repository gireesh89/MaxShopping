@model ShoppingSite.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page login-page">
    <div class="page-title" align="center">
        <h1>Login to SmartBazzar</h1>
    </div>
</div> 

<div class="row">
    <div class="col-lg-12 ">
        <div class="panel-primary" align="center">
            @*<div class="panel-heading">Login to SmartBazzar</div>*@
            <div class="panel-body">
                <div role="form" class="form-horizontal" style="margin-left:10%">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group input-group">
                            <span class="glyphicon glyphicon-user"></span>
                            @Html.LabelFor(model => model.UserName, new { @class="control-label"})
                            @Html.TextBoxFor(model => model.UserName, new { @class="form-control form-control-flat clearall",@required="required",autocomplete="off"})
                        </div>
                        <div class="form-group input-group">
                            <span class="glyphicon glyphicon-lock"></span>
                            @Html.LabelFor(model => model.Password, new { @class="control-label"})
                            @Html.TextBoxFor(model => model.Password, new { @class="form-control form-control-flat clearall"})
                        </div>
                        <div class="form-group input-group">
                            @Html.LabelFor(model => model.RememberMe, new { @class="control-label"})
                            @Html.CheckBoxFor(model => model.RememberMe, new { @class="checkbox checkbox-inline"})
                        </div> 
                        <div class="form-group input-group">
                            <input type="Submit" value="Login" class="btn btn-success" />
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>